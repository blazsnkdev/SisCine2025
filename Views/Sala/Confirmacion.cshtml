@model SistemaCineMVC.Models.Sala


<h3>¿Esta Seguro de Eliminar esta Sala?</h3>
<div>
    <h4>@ViewData["Titulo"]</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdSala)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdSala)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Capacidad)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Capacidad)
        </dd>
    </dl>
    
    <form asp-controller="Sala" asp-action="Eliminar" asp-route-id="@Model.IdSala" method="post">
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-controller="Sala" asp-action="Lista" class="btn btn-secondary">Cancelar</a>
    </form>
</div>


@section Scripts{
    <script>


         $(function()
        {

            let ErrorEliminar = "@TempData["ErrorEliminar"]";

            if (ErrorEliminar) {
                Toastify({
                    text: ErrorEliminar,
                    duration: 3000,
                    gravity: "top",
                    position: "right",
                    backgroundColor: "#f54251"
                }).showToast();
            }

             });
    </script>
}
