@model SistemaCineMVC.Models.Sala

<h1>@ViewData["Titulo"]</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Sala" asp-action="Registrar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @* <div class="form-group"> *@
            @*     <label asp-for="IdSala" class="control-label"></label> *@
            @*     <input asp-for="IdSala" class="form-control" /> *@
            @*     <span asp-validation-for="IdSala" class="text-danger"></span> *@
            @* </div> *@
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" placeholder="Nombre de la sala..."/>
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Capacidad" class="control-label"></label>
                <input asp-for="Capacidad" class="form-control" placeholder="Capacidad.."/>
                <span asp-validation-for="Capacidad" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-dark" /> |
                <a asp-controller="Sala" asp-action="Lista" class="btn btn-secondary">Regresar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
