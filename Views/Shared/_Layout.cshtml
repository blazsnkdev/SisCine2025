                    <i class="fas fa-bars text-white"></i>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link cinema-nav-link" href="@Url.Action("Index", "Home")">
                                <i class="fas fa-home me-1"></i> Inicio
                            </a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle cinema-nav-link" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-film me-1"></i> Catálogo
                            </a>
                            <ul class="dropdown-menu cinema-dropdown">
                                <li>
                                    <a class="dropdown-item cinema-dropdown-item" href="@Url.Action("Lista", "Pelicula")">
                                        <i class="fas fa-video me-2"></i> Películas
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item cinema-dropdown-item" href="@Url.Action("Lista", "Sala")">
                                        <i class="fas fa-door-open me-2"></i> Salas
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item cinema-dropdown-item" href="@Url.Action("Lista", "Funcion")">
                                        <i class="fas fa-calendar-alt me-2"></i> Funciones
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item cinema-dropdown-item" href="@Url.Action("Lista", "Asiento")">
                                        <i class="fas fa-chair me-2"></i> Asientos
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle cinema-nav-link" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-shopping-cart me-1"></i> Ventas
                            </a>
                            <ul class="dropdown-menu cinema-dropdown">
                                <li>
                                    <a class="dropdown-item cinema-dropdown-item" href="@Url.Action("CrearVenta", "Venta")">
                                        <i class="fas fa-plus-circle me-2"></i> Nueva Venta
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item cinema-dropdown-item" href="@Url.Action("Index", "Entrada")">
                                        <i class="fas fa-ticket-alt me-2"></i> Entradas
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item cinema-dropdown-item" href="@Url.Action("Lista", "Cliente")">
                                        <i class="fas fa-users me-2"></i> Clientes
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>

                    <div class="d-flex align-items-center gap-3">
                        <button class="btn theme-toggle" onclick="toggleTheme()" title="Cambiar tema">
                            <i class="fas fa-moon" id="theme-icon"></i>
                        </button>
                        <a href="@Url.Action("CrearVenta", "Venta")" class="btn btn-cinema-primary">
                            <i class="fas fa-ticket-alt me-1"></i> Nueva Venta
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- Breadcrumbs -->
    <div class="container">
        <nav aria-label="breadcrumb" class="cinema-breadcrumb">
            <ol class="breadcrumb" id="breadcrumb-nav">
                <!-- Breadcrumbs will be generated by JavaScript -->
            </ol>
        </nav>
    </div>

    <!-- Main Content -->
    <div class="container">
        <main class="cinema-main fade-in">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="cinema-footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 mb-4">
                    <h5><i class="fas fa-film me-2"></i>SistemaCineMVC</h5>
                    <p class="mb-3">Sistema completo de gestión para cines. Administra tu negocio de manera eficiente y moderna.</p>
                    <div class="d-flex gap-3">
                        <a href="#" class="text-decoration-none">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a href="#" class="text-decoration-none">
                            <i class="fab fa-twitter"></i>
                        </a>
                        <a href="#" class="text-decoration-none">
                            <i class="fab fa-instagram"></i>
                        </a>
                    </div>
                </div>
                <div class="col-lg-2 col-md-6 mb-4">
                    <h5>Catálogo</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="@Url.Action("Lista", "Pelicula")">Películas</a></li>
                        <li class="mb-2"><a href="@Url.Action("Lista", "Sala")">Salas</a></li>
                        <li class="mb-2"><a href="@Url.Action("Lista", "Funcion")">Funciones</a></li>
                        <li class="mb-2"><a href="@Url.Action("Lista", "Asiento")">Asientos</a></li>
                    </ul>
                </div>
                <div class="col-lg-2 col-md-6 mb-4">
                    <h5>Ventas</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="@Url.Action("CrearVenta", "Venta")">Nueva Venta</a></li>
                        <li class="mb-2"><a href="@Url.Action("Index", "Entrada")">Entradas</a></li>
                        <li class="mb-2"><a href="@Url.Action("Lista", "Cliente")">Clientes</a></li>
                    </ul>
                </div>
                <div class="col-lg-2 col-md-6 mb-4">
                    <h5>Enlaces</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="@Url.Action("Index", "Home")">Inicio</a></li>
                        <li class="mb-2"><a href="@Url.Action("Privacy", "Home")">Privacidad</a></li>
                        <li class="mb-2"><a href="#">Soporte</a></li>
                    </ul>
                </div>
                <div class="col-lg-2 col-md-6 mb-4">
                    <h5>Contacto</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><i class="fas fa-phone me-2"></i>+1 234 567 890</li>
                        <li class="mb-2"><i class="fas fa-envelope me-2"></i>info@cinema.com</li>
                        <li class="mb-2"><a href="#"><i class="fas fa-map-marker-alt me-2"></i>123 Cinema St.</a></li>
                    </ul>
                </div>
            </div>
            <hr class="my-4" style="border-color: rgba(255,255,255,0.1);">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <p class="mb-0">&copy; @DateTime.Now.Year - SistemaCineMVC - Todos los derechos reservados</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <a href="@Url.Action("Privacy", "Home")" class="me-3">Política de Privacidad</a>
                    <a href="#">Términos de Uso</a>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>

    <script>
        // Breadcrumb generation
        function generateBreadcrumbs() {
            const path = window.location.pathname;
            const segments = path.split('/').filter(segment => segment !== '');
            const breadcrumbNav = document.getElementById('breadcrumb-nav');

            if (segments.length === 0 || (segments.length === 1 && segments[0] === 'Home')) {
                breadcrumbNav.style.display = 'none';
                return;
            }

            const nameMap = {
                'Home': 'Inicio',
                'Cliente': 'Clientes',
                'Pelicula': 'Películas',
                'Sala': 'Salas',
                'Funcion': 'Funciones',
                'Asiento': 'Asientos',
                'Entrada': 'Entradas',
                'Venta': 'Ventas',
                'Lista': 'Lista',
                'CrearVenta': 'Crear Venta',
                'Index': 'Índice',
                'Privacy': 'Privacidad'
            };

            let breadcrumbHTML = '<li class="breadcrumb-item cinema-breadcrumb-item"><a href="/"><i class="fas fa-home me-1"></i>Inicio</a></li>';

            for (let i = 0; i < segments.length; i++) {
                const segment = segments[i];
                const displayName = nameMap[segment] || segment;
                const isLast = i === segments.length - 1;
                const href = '/' + segments.slice(0, i + 1).join('/');

                if (isLast) {
                    breadcrumbHTML += `<li class="breadcrumb-item cinema-breadcrumb-item active" aria-current="page">${displayName}</li>`;
                } else {
                    breadcrumbHTML += `<li class="breadcrumb-item cinema-breadcrumb-item"><a href="${href}">${displayName}</a></li>`;
                }
            }

            breadcrumbNav.innerHTML = breadcrumbHTML;
        }

        // Theme toggle
        function toggleTheme() {
            const body = document.body;
            const themeIcon = document.getElementById('theme-icon');

            if (body.classList.contains('dark-theme')) {
                body.classList.remove('dark-theme');
                themeIcon.className = 'fas fa-moon';
                localStorage.setItem('theme', 'light');
            } else {
                body.classList.add('dark-theme');
                themeIcon.className = 'fas fa-sun';
                localStorage.setItem('theme', 'dark');
            }
        }

        // Load saved theme
        function loadTheme() {
            const savedTheme = localStorage.getItem('theme');
            const themeIcon = document.getElementById('theme-icon');

            if (savedTheme === 'dark') {
                document.body.classList.add('dark-theme');
                themeIcon.className = 'fas fa-sun';
            }
        }

        // Add active class to current nav item
        function setActiveNavItem() {
            const currentPath = window.location.pathname;
            const navLinks = document.querySelectorAll('.cinema-nav-link');

            navLinks.forEach(link => {
                const href = link.getAttribute('href');
                if (href && currentPath.includes(href) && href !== '/') {
                    link.classList.add('active');
                }
            });
        }

        // Initialize everything when DOM is loaded
        document.addEventListener('DOMContentLoaded', function() {
            generateBreadcrumbs();
            loadTheme();
            setActiveNavItem();
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>