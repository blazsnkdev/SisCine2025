<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SistemaCineMVC</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <!-- Toastify -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css" />
    <!-- jQuery UI -->
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css">

    <style>
        :root {
            --cinema-red: #dc2626;
            --cinema-red-dark: #991b1b;
            --cinema-gold: #f59e0b;
            --cinema-dark: #1f2937;
            --cinema-light: #f8fafc;
            --cinema-gray: #6b7280;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: var(--cinema-light);
            color: var(--cinema-dark);
            line-height: 1.6;
        }

        /* Header Styles */
        .cinema-header {
            background: linear-gradient(135deg, var(--cinema-red) 0%, var(--cinema-red-dark) 100%);
            box-shadow: 0 4px 20px rgba(220, 38, 38, 0.3);
            position: sticky;
            top: 0;
            z-index: 1000;
        }

        .cinema-navbar {
            padding: 1rem 0;
        }

        .cinema-brand {
            font-size: 1.5rem;
            font-weight: 700;
            color: white !important;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

            .cinema-brand:hover {
                color: var(--cinema-gold) !important;
                transform: scale(1.05);
                transition: all 0.3s ease;
            }

        .cinema-nav-link {
            color: rgba(255, 255, 255, 0.9) !important;
            font-weight: 500;
            padding: 0.5rem 1rem !important;
            border-radius: 8px;
            transition: all 0.3s ease;
            text-decoration: none;
        }

            .cinema-nav-link:hover {
                background-color: rgba(255, 255, 255, 0.1);
                color: white !important;
                transform: translateY(-2px);
            }

            .cinema-nav-link.active {
                background-color: var(--cinema-gold);
                color: var(--cinema-dark) !important;
            }

        /* Dropdown Styles */
        .cinema-dropdown {
            background-color: white;
            border: none;
            border-radius: 12px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
            padding: 0.5rem 0;
        }

        .cinema-dropdown-item {
            padding: 0.75rem 1.5rem;
            color: var(--cinema-dark);
            transition: all 0.3s ease;
            border: none;
            background: none;
        }

            .cinema-dropdown-item:hover {
                background-color: var(--cinema-red);
                color: white;
            }

        /* Breadcrumbs */
        .cinema-breadcrumb {
            background: none;
            padding: 1rem 0;
            margin-bottom: 1rem;
        }

        .cinema-breadcrumb-item {
            color: var(--cinema-gray);
            font-size: 0.9rem;
        }

            .cinema-breadcrumb-item.active {
                color: var(--cinema-red);
                font-weight: 600;
            }

            .cinema-breadcrumb-item a {
                color: var(--cinema-gray);
                text-decoration: none;
                transition: color 0.3s ease;
            }

                .cinema-breadcrumb-item a:hover {
                    color: var(--cinema-red);
                }

        /* Main Content */
        .cinema-main {
            min-height: calc(100vh - 200px);
            padding: 2rem 0;
        }

        /* Footer */
        .cinema-footer {
            background: var(--cinema-dark);
            color: white;
            padding: 3rem 0 1rem;
            margin-top: 4rem;
        }

            .cinema-footer h5 {
                color: var(--cinema-gold);
                font-weight: 600;
                margin-bottom: 1rem;
            }

            .cinema-footer a {
                color: rgba(255, 255, 255, 0.8);
                text-decoration: none;
                transition: color 0.3s ease;
            }

                .cinema-footer a:hover {
                    color: var(--cinema-gold);
                }

        /* Buttons */
        .btn-cinema-primary {
            background: linear-gradient(135deg, var(--cinema-red) 0%, var(--cinema-red-dark) 100%);
            border: none;
            color: white;
            padding: 0.75rem 1.5rem;
            border-radius: 10px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

            .btn-cinema-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 25px rgba(220, 38, 38, 0.4);
                color: white;
            }

        .btn-cinema-secondary {
            background: transparent;
            border: 2px solid var(--cinema-red);
            color: var(--cinema-red);
            padding: 0.75rem 1.5rem;
            border-radius: 10px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

            .btn-cinema-secondary:hover {
                background: var(--cinema-red);
                color: white;
                transform: translateY(-2px);
            }

        /* Cards */
        .cinema-card {
            background: white;
            border-radius: 16px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            border: none;
            transition: all 0.3s ease;
            overflow: hidden;
        }

            .cinema-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
            }

        /* Theme toggle */
        .theme-toggle {
            background: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
            color: white;
            border-radius: 8px;
            padding: 0.5rem;
            transition: all 0.3s ease;
        }

            .theme-toggle:hover {
                background: rgba(255, 255, 255, 0.2);
                color: white;
            }

        /* Animation classes */
        .fade-in {
            animation: fadeIn 0.6s ease-in;
        }




        /* Dark theme styles */
        .dark-theme {
            background-color: #1a1a1a !important;
            color: #e5e5e5 !important;
        }

            .dark-theme .cinema-card {
                background-color: #2d2d2d !important;
                color: #e5e5e5 !important;
            }

            .dark-theme .cinema-dropdown {
                background-color: #2d2d2d !important;
            }

            .dark-theme .cinema-dropdown-item {
                color: #e5e5e5 !important;
            }
    </style>
</head>
<body>
    <!-- Header -->
    <header class="cinema-header">
        <nav class="navbar navbar-expand-lg cinema-navbar">
            <div class="container">
                <a class="cinema-brand" href="@Url.Action("Index", "Home")">
                    <i class="fas fa-film"></i>
                    SistemaCineMVC
